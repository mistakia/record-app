.context-menu
  position fixed
  background #282828
  padding 4px
  border 1px solid rgba(255,255,255,0.08)
  border-radius 3px
  min-width 160px
  z-index 10002

  &--input
    border 0
    width 300px
    input
      border-radius 0

  &--option
    padding 3px 20px
    line-height 32px
    width 100%
    cursor default
    font-size 12px
    color #b3b3b3
    &:hover
      background #333
      color white
    &:active
      color #e9e9e9
      background linear-gradient(to top, #555, #444)
    &.disabled
      color #666
      pointer-events none

  &--separator
    width 100%
    height 1px
    background #CCCCCC
    margin 0 0 0 0
