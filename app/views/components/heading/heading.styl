.heading
  font-family "jaf-bernino-sans","Lucida Grande","Lucida Sans Unicode","Lucida Sans",Geneva,Verdana,sans-serif
  font-weight 700
  font-style normal
  text-transform uppercase
  font-size 8px
  letter-spacing .2em
  color rgba(0,0,0,0.5)
  position relative
  line-height 1.2
  margin 50px 0 35px
  &.center
    text-align center
  a
  span
    display inline-block
    position relative
    background $backgroundColor
    padding 3px 8px 2px 12px
    font-size 11px
    letter-spacing .3em
  &:before
    content ""
    display block
    position absolute
    top 10px
    width 100%
    border-top 1px solid $borderColor
