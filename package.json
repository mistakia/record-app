{
  "name": "Record",
  "version": "0.1.0-alpha",
  "description": "Desktop, mobile and web app for Record: a distributed system for audio files",
  "author": "Mistakia <placeholder@email.com> (http://docs.record.tint.space/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mistakia/record-app"
  },
  "homepage": "http://docs.record.tint.space/",
  "keywords": [],
  "scripts": {
    "prestart": "yarn build",
    "postinstall": "electron-builder install-app-deps && yarn build:dll",
    "install:nodejs-mobile": "cd nodejs-assets/nodejs-project && npm ci",
    "clean": "rm -rf $TMPDIR/react-* && watchman watch-del-all && npm cache clean --force",
    "lint": "standard 'src/**/*.js' && standard 'nodejs-assets/nodejs-project/main.js' && standard '*.js' ",
    "lint:fix": "standard --fix 'src/**/*.js'",
    "package": "yarn build && electron-builder build --publish never",
    "package:all": "yarn build && electron-builder build -mwl",
    "package:ci": "yarn postinstall && yarn build && electron-builder --publish always",
    "package:mac": "yarn build && electron-builder build --mac",
    "package:linux": "yarn build && electron-builder build --linux",
    "package:win": "yarn build && electron-builder build --win --x64",
    "build": "concurrently \"yarn build:main\" \"yarn build:renderer\" \"yarn build:background\"",
    "build:icon": "electron-icon-builder --input=./resources/icon.png --output=./resources --flatten",
    "build:dll": "cross-env NODE_ENV=development webpack --config ./configs/webpack.config.renderer.dev.dll.babel.js --color",
    "build:e2e": "cross-env E2E_BUILD=true yarn build",
    "build:main": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.main.prod.babel.js --color",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.renderer.prod.babel.js --color",
    "build:background": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.background.prod.babel.js --color",
    "build:nodejs-mobile": "cd nodejs-assets/nodejs-project && ../../node_modules/.bin/browserify -o bundle.js -g [ babelify --presets [ @babel/preset-env --targets [ --node 10.13.0 ] ] ] --node --im -u 'leveldown' -u 'flexsearch' main.js",
    "build:ios": "node node_modules/react-native/local-cli/cli.js bundle --reset-cache --entry-file src/index.ios.js --bundle-output ios/main.jsbundle --platform ios --dev false",
    "build:ios:dev": "node node_modules/react-native/local-cli/cli.js bundle --reset-cache --entry-file src/index.ios.js --bundle-output ios/main.jsbundle --platform ios --dev true",
    "rebuild:electron": "electron-rebuild --parallel --force --types prod,dev,optional --module-dir src",
    "start:rn": "REACT_DEBUGGER=\"open -g 'rndebugger://set-debugger-loc?port=8081' ||\" node node_modules/react-native/local-cli/cli.js start --reset-cache",
    "start:ios": "react-native run-ios",
    "start:android": "react-native bundle --entry-file src/index.android.js --bundle-output android/app/src/main/assets/index.android.bundle --platform android --dev true",
    "start:electron": "cross-env START_HOT=1 NODE_ENV=development NODE_OPTIONS='--trace-warnings' webpack serve --config configs/webpack.config.renderer.dev.babel.js",
    "start:electron:main": "cross-env START_HOT=1 NODE_ENV=development electron -r ./internals/scripts/BabelRegister ./src/main.dev.js",
    "start:electron:dist": "cross-env NODE_ENV=production electron ./src/main.prod.js",
    "start:electron:dist:debug": "cross-env DEBUG_PROD=true NODE_ENV=production electron ./src/main.prod.js"
  },
  "browserslist": [],
  "build": {
    "productName": "Record",
    "appId": "org.TINT.Record",
    "files": [
      "dist/",
      "node_modules/",
      "index.html",
      "background.html",
      "background.prod.js",
      "background.prod.js.map",
      "main.prod.js",
      "main.prod.js.map",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "extraFiles": [
        {
          "from": "resources/win/bin",
          "to": "Resources/bin",
          "filter": [
            "**/*"
          ]
        }
      ],
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "extraFiles": [
        {
          "from": "resources/linux/bin",
          "to": "Resources/bin",
          "filter": [
            "**/*"
          ]
        }
      ],
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Development"
    },
    "mac": {
      "extraFiles": [
        {
          "from": "resources/mac/bin",
          "to": "Resources/bin",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "directories": {
      "buildResources": "resources",
      "output": "release",
      "app": "src"
    },
    "publish": {
      "provider": "github",
      "owner": "mistakia",
      "repo": "record-app",
      "private": false
    }
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "resolutions": {
    "nib/stylus": "0.56.0"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "abortcontroller-polyfill": "^1.4.0",
    "connected-react-router": "^6.9.1",
    "electron-updater": "4.3.9",
    "fix-path": "^3.0.0",
    "go-ipfs": "0.8.0",
    "hashicon": "^0.3.0",
    "history": "4.10.1",
    "hotkeys-js": "^3.7.6",
    "immutable": "^3.8.2",
    "jsonfile": "^6.0.1",
    "logplease": "^1.2.15",
    "normalize.css": "^8.0.0",
    "prop-types": "^15.6.0",
    "query-string": "^6.12.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "7.2.3",
    "react-router": "5.2.0",
    "react-router-dom": "5.2.0",
    "react-sortable-hoc": "^1.11.0",
    "react-virtualized-auto-sizer": "^1.0.2",
    "react-window": "^1.8.5",
    "react-window-infinite-loader": "^1.0.3",
    "record-ipfsd": "mistakia/record-ipfsd#4691979",
    "record-node": "mistakia/record-node#2bc5f19",
    "redux": "^4.0.0",
    "redux-immutable": "^4.0.0",
    "redux-saga": "^1.0.0-beta.1",
    "regenerator-runtime": "^0.13.7",
    "reselect": "4.0.0",
    "source-map-support": "^0.5.19",
    "timeago-react": "^3.0.0",
    "v8-compile-cache": "2.2.0",
    "whatwg-fetch": "^2.0.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-react-constant-elements": "^7.9.0",
    "@babel/plugin-transform-react-inline-elements": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/register": "^7.9.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-dev-expression": "^0.2.2",
    "babel-plugin-module-resolver": "4.1.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "babelify": "^10.0.0",
    "browserify": "17.0.0",
    "browserslist-config-erb": "^0.0.1",
    "chalk": "^4.0.0",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "6.6.0",
    "debug-menu": "^0.6.1",
    "electron": "8.5.5",
    "electron-builder": "22.14.13",
    "electron-debug": "^3.0.1",
    "electron-devtools-installer": "3.1.1",
    "electron-icon-builder": "^1.0.2",
    "electron-rebuild": "3.2.7",
    "eslint-plugin-react": "^7.10.0",
    "metro-config": "^0.54.1",
    "metro-react-native-babel-preset": "^0.54.1",
    "mini-css-extract-plugin": "2.5.3",
    "nib": "^1.1.2",
    "node-loader": "2.0.0",
    "nodejs-mobile-react-native": "^0.4.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "react-native": "~0.62.3",
    "react-native-audio-polyfill": "^1.1.6",
    "react-native-fs": "^2.9.12",
    "react-native-keyboard-aware-scroll-view": "^0.6.0",
    "react-native-vector-icons": "^5.0.0",
    "react-refresh": "^0.11.0",
    "react-router-native": "5.2.0",
    "redbox-react": "^1.3.6",
    "rimraf": "^3.0.2",
    "standard": "16.0.4",
    "style-loader": "3.3.1",
    "stylus": "0.56.0",
    "stylus-loader": "6.2.0",
    "terser-webpack-plugin": "5.1.1",
    "url-loader": "4.1.1",
    "webpack": "5.68.0",
    "webpack-bundle-analyzer": "4.4.0",
